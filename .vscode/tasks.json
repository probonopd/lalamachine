{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "runLalaDebug",
            "command": "${workspaceRoot}/debug/lalamachine",
            "type": "shell",
            "problemMatcher": [
                "$lessCompile"
            ]
        },
        {
            "taskName": "qmake-debug",
            "command": "cd ${workspaceRoot}/debug/ && qmake CONFIG+=debug ${workspaceRoot}/lalamachine.pro && /usr/bin/make qmake_all && make -j3",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "problemMatcher": [
                "$lessCompile"
            ]
        },
        {
            "taskName": "make clean",
            "command": "cd ${workspaceRoot}/debug/ && make clean",
            "group": "build",
            "type": "shell",
            "problemMatcher": [
                "$lessCompile"
            ]
        }
    ]
}